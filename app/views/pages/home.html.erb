<div class="container" id="customize-home-container">
  <div class="row">
    <div class="col s12">
      <div class="slider row">
        <ul class="slides">
          <% @slides.each do |slide| %>
            <li>
              <%= link_to slide.content do %>
                <%= image_tag slide.image.url(:thumb), style: "width: 100%; height: 100%" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="row row-space-home-page"></div>
    </div>
  </div>
</div>
