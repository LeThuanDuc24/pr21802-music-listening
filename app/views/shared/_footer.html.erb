<footer class="page-footer blue-grey darken-3">
  <div class="container" id="customize-home-container">
    <div class="row">
      <div class="col s12 m6 l6 center">
        <h5 class="white-text"><%= t ".connect_us" %></h5>
        <ul>
          <li>
            <%= link_to image_tag("youtube48.png", alt: t(".link_to_YouTube")), root_path, class: 'image-social-footer', target: :blank %>
            <%= link_to image_tag("facebook48.png", alt: t(".link_to_Facebook")), root_path, class: 'image-social-footer', target: :blank %>
          </li>
        </ul>
      </div>
      <div class="col s12 m6 l4 offset-l2 center">
        <h5 class="white-text"><%= t ".company_name" %></h5>
        <ul>
          <li><%= link_to t(".about_us"), root_path , :class => 'grey-text text-lighten-3' %></li>
          <li><%= link_to t(".help"), root_path , class: 'grey-text text-lighten-3' %></li>
          <li><%= link_to t(".term_of_use"), root_path , :class => 'grey-text text-lighten-3' %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
      <%= t ".copyright" %>
    </div>
  </div>
</footer>